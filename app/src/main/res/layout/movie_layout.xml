<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:adjustViewBounds="true">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:elevation="3dp"
        card_view:cardCornerRadius="15dp">

        <RelativeLayout
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/movie_image_2"
                android:layout_width="146dp"
                android:layout_height="160dp"
                android:background="@color/colorYellow"
                android:contentDescription="TODO" android:scaleType="fitXY" />

            <TextView
                android:id="@+id/movie_title"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:paddingLeft="15dp"
                android:text="Title"
                android:textColor="@color/colorYellow" />

            <TextView
                android:id="@+id/movie_rate"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/movie_title"
                android:layout_marginTop="54dp"
                android:paddingLeft="15dp"
                android:text="Rate"
                android:textColor="@color/colorYellow" />

            <RatingBar
                android:id="@+id/movie_rate_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:numStars="5"
                android:outlineAmbientShadowColor="@color/colorYellow"
                android:rating="2.5"
                android:isIndicator="true"
                android:stepSize="0.1"
                android:paddingLeft="15dp"
                android:layout_alignStart="@id/movie_rate"
                android:layout_alignParentTop="true"
                android:layout_marginTop="80dp"
                />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>