<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/cast_width"
    android:layout_height="230dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_movie_thumb"
        android:layout_width="@dimen/cast_width"
        android:layout_height="@dimen/cast_heigh">

        <ImageView
            android:id="@+id/person_profile_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            android:contentDescription="Hold cast profile pic" />
    </RelativeLayout>


    <TextView
        android:id="@+id/person_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="@dimen/card_content_padding"
        android:textColor="@color/colorYellow"
        android:textSize="@dimen/overview_text_size"
        android:typeface="sans" />

    <TextView
        android:id="@+id/person_character"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/overview_text_size"
        android:typeface="sans" />

</LinearLayout>